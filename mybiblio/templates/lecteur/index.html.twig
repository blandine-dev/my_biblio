{% extends 'base.html.twig' %}

{% block title %}Lecteur index{% endblock %}

{% block body %}
    <h1>Lecteur index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Prenom</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for lecteur in lecteurs %}
            <tr>
                <td>{{ lecteur.id }}</td>
                <td>{{ lecteur.nom }}</td>
                <td>{{ lecteur.prenom }}</td>
                <td>
                    <a href="{{ path('lecteur_show', {'id': lecteur.id}) }}">show</a>
                    <a href="{{ path('lecteur_edit', {'id': lecteur.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('lecteur_new') }}">Create new</a>
{% endblock %}
