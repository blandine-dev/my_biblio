{% extends 'base.html.twig' %}

{% block title %}Lecteur index{% endblock %}

{% block body %}
<div class="container">
    <h1 class="text-center mt-3"><i class="fa fa-user-circle-o" aria-hidden="true"></i>
        Lecteurs</h1>
    <a href="{{ path('lecteur_new') }}" class="btn btn-danger mb-5">Nouveau</a>

    <table class="table table-hover table-borderless mt-5">
        <thead>
            <tr class="bandeau">
                {# <th>Id</th> #}
                <th>Nom</th>
                <th>Pr√©nom</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
        {% for lecteur in lecteurs %}
            <tr>
                {# <td>{{ lecteur.id }}</td> #}
                <td>{{ lecteur.nom }}</td>
                <td>{{ lecteur.prenom }}</td>
                <td>
                    {# <a href="{{ path('lecteur_show', {'id': lecteur.id}) }}" class="btn btn-success">Voir</a> #}
                    <a href="{{ path('lecteur_edit', {'id': lecteur.id}) }}" class="btn btn-success">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    
</div>
{% endblock %}
